<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/background_body_goup"
    tools:context="policia.transito.Teclado"
    >
    
   
   <include 
       android:id="@+id/includTecladoNavegation"
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       layout="@layout/item_navegation"/>
    
    
    
    <TextView
       
        android:id="@+id/tvTecladoReadInputText"
        android:layout_below="@+id/includTecladoNavegation"
        android:textSize="@dimen/tecladoTextSizeInput"
        android:layout_marginTop="@dimen/textAfastHorizontal"
        android:layout_marginBottom="@dimen/textAfastHorizontal"
        android:layout_marginRight="@dimen/textAfastVertical"
        android:layout_marginLeft="@dimen/textAfastVertical"
        android:textStyle="bold"
	    style="@style/textRead"
	    />
    
    
    <LinearLayout android:id="@+id/layout_2"
        android:layout_below="@+id/tvTecladoReadInputText"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <LinearLayout android:layout_width="match_parent"
            android:layout_marginTop="@dimen/tecladoMargens"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <Button android:text="1"
                style="@style/buttonTeclado"
                android:textColor="#fff"/>

            <Button
                android:text="2" 
                style="@style/buttonTeclado"
                />
            
            <Button android:text="3"
                style="@style/buttonTeclado"
                />  
            
        </LinearLayout>
        
        <LinearLayout android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            
            <Button android:text="4"
                style="@style/buttonTeclado"
                />
            
            <Button android:text="5"
                style="@style/buttonTeclado"
                />
            
            <Button android:text="6"
                style="@style/buttonTeclado"
                />
            
            
            
        </LinearLayout>
        
        <LinearLayout android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            
            <Button android:text="7"
                style="@style/buttonTeclado"
                />
            
            <Button android:text="8"
                style="@style/buttonTeclado" 
                />
            
            <Button android:text="9"
                style="@style/buttonTeclado"/>
            
        </LinearLayout>
        
        <LinearLayout android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            
            <Button android:text="0"
                style="@style/buttonTeclado"
                />
            
            <ImageButton 
                android:src="@drawable/esq"
                style="@style/buttonTecladoAction"
                android:onClick="backSpace"
                />
            
            <Button android:text="OK"
                style="@style/buttonTecladoAction"
                android:onClick="onClickOk"
                />
            
        </LinearLayout>
        
    </LinearLayout>
    
    
    
	<LinearLayout
	    android:id="@+id/layout_3"
	    style="@style/areaDados"
	    android:layout_width="match_parent"
	    android:layout_alignParentBottom="true"
	    android:background="#ddd"
	    android:visibility="visible" >

		<HorizontalScrollView
		    android:id="@+id/horizontalScrollView1"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" >

		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical" >
		        <LinearLayout 
		            android:layout_height="wrap_content"
		            android:layout_width="match_parent">
		            
		             <Button android:text="A"
		                style="@style/buttonTecladoLetras"
		                />
			        
			        <Button android:text="C"
		                style="@style/buttonTecladoLetras"
		                />
			        
			        <Button android:text="E"
		                style="@style/buttonTecladoLetras"
		                />
			        
			        <Button android:text="G"
		                style="@style/buttonTecladoLetras"
		                />
			        
			        <Button android:text="I"
		                style="@style/buttonTecladoLetras"
		                />
			        
			        <Button android:text="K"
		                style="@style/buttonTecladoLetras"
		                />
			        <Button android:text="M"
		                style="@style/buttonTecladoLetras"
		                />
			        <Button android:text="O"
		                style="@style/buttonTecladoLetras"
		                />
			        <Button android:text="Q"
		                style="@style/buttonTecladoLetras"
		                />
			        <Button android:text="S"
		                style="@style/buttonTecladoLetras"
		                />
			        <Button android:text="U"
		                style="@style/buttonTecladoLetras"
		                />
			        <Button android:text="W"
		                style="@style/buttonTecladoLetras"
		                />
			        
		        </LinearLayout>
		        
		        <LinearLayout 
		            android:layout_height="wrap_content"
		            android:layout_width="match_parent">
		             <Button android:text="B"
		                style="@style/buttonTecladoLetras"
		                />
			        
			        <Button android:text="D"
		                style="@style/buttonTecladoLetras"
		                />
			        
			        <Button android:text="F"
		                style="@style/buttonTecladoLetras"
		                />
			        
			        <Button android:text="H"
		                style="@style/buttonTecladoLetras"
		                />
			        
			        <Button android:text="J"
		                style="@style/buttonTecladoLetras"
		                />
			        
			        <Button android:text="L"
		                style="@style/buttonTecladoLetras"
		                />
			        <Button android:text="N"
		                style="@style/buttonTecladoLetras"
		                />
			        <Button android:text="P"
		                style="@style/buttonTecladoLetras"
		                />
			        <Button android:text="R"
		                style="@style/buttonTecladoLetras"
		                />
			        <Button android:text="T"
		                style="@style/buttonTecladoLetras"
		                />
			        <Button android:text="V"
		                style="@style/buttonTecladoLetras"
		                />
			        <Button android:text="X"
		                style="@style/buttonTecladoLetras"
		                />
			        <Button android:text="Y"
		                style="@style/buttonTecladoLetras"
		                />
			        <Button android:text="Z"
		                style="@style/buttonTecladoLetras"
		                />
			            
		        </LinearLayout>
		       
		        
		    </LinearLayout>
		    
		</HorizontalScrollView>
	    
	</LinearLayout>
	
	<LinearLayout
	    style="@style/areaDados"
	    android:layout_alignParentRight="true"
	    android:layout_alignTop="@+id/layout_3"
	    android:visibility="visible"
	    android:layout_width="wrap_content"
	    android:background="@android:color/transparent"
	    >
	    <Spinner
	        android:id="@+id/spinnerTecladoFavoritos"
	        style="@style/buttonTecladoFavorito"
	        />
	</LinearLayout>
	
	
	
</RelativeLayout>
