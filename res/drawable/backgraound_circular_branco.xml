<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
		    <item >
		        <shape android:shape="oval">
		            <solid android:color="@color/borderDivice"/>
		        </shape>
		    </item>
		    
		    <item android:left="@dimen/grosuraBorderDivice"
		        android:right="@dimen/grosuraBorderDivice"
		        android:bottom="@dimen/grosuraBorderDivice"
		        android:top="@dimen/grosuraBorderDivice">
		        <shape android:shape="oval">
		            <solid android:color="@color/corBranca"/>
		        </shape>
		    </item>
		
		</layer-list>
    </item>
    
    <item android:state_pressed="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
		    <item >
		        <shape android:shape="oval">
		            <solid android:color="@color/corItemSelecionado"/>
		        </shape>
		    </item>
		    
		    <item 
		        android:left="@dimen/grosuraBorderDivice"
		        android:right="@dimen/grosuraBorderDivice"
		        android:bottom="@dimen/grosuraBorderDivice"
		        android:top="@dimen/grosuraBorderDivice">
		        <shape android:shape="oval">
		            <solid android:color="@color/borderDivice"/>
		        </shape>
		    </item>
		    
		    <item android:left="@dimen/grosuraBorderDiviceSecond"
		        android:right="@dimen/grosuraBorderDiviceSecond"
		        android:bottom="@dimen/grosuraBorderDiviceSecond"
		        android:top="@dimen/grosuraBorderDiviceSecond">
		        <shape android:shape="oval">
		            <solid android:color="@color/corBranca"/>
		        </shape>
		    </item>
		
		</layer-list>
    </item>
</selector>
